{% set heroImage = entry.cb_homepageHero.heroImage.eagerly().one() %}
{% set textAlignment = entry.cb_homepageHero.rangeTextLeftOrRight ? 'text-right' : 'text-left' %}
{% cache using key (entry.id ~ '-hero-section') for 1 hour %}
<section class="hero {{ textAlignment }}"
         {% if heroImage %}
         style="--hero-bg: url('{{ heroImage.getUrl({
           width: 1920,
           height: 1080,
           mode: 'crop',
           format: 'webp',
           quality: 85
         }) }}')"
         {% endif %}>
    <div class="container">
        <div class="hero-content">
            <div class="text-content">
                <h1>{{ entry.cb_homepageHero.heroTitle|striptags('<strong>')|raw }}</h1>
                <p>{{ entry.cb_homepageHero.heroSubText }}</p>
            </div>

            {% if entry.cb_homepageHero.heroButtons|length %}
                <div class="hero-buttons">
                    {% for button in entry.cb_homepageHero.heroButtons %}
                        <a href="{{ button.buttonLink }}"
                           class="btn {{ button.highlighted ? 'primary' : 'secondary' }}">
                            {{ button.buttonText }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</section>
{% endcache %}
