{# Query the Contact page entry to get dynamic data #}
{% set contactEntry = craft.entries.section('contact').one() %}

<footer>
    <div class="container">
        <div class="footer-content">
            <div class="footer-section links">
                <h3>Quick Links</h3>
                <div class="links-grid">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/salon">Our Salon</a></li>
                        <li><a href="/our-services">Services</a></li>
                        <li><a href="/meet-the-team">Meet the Team</a></li>
                        <li><a href="/contact">Contact Us</a></li>
                        <li><a href="/careers">Careers</a></li>
                        <li><a href="/news">Latest News</a></li>
                    </ul>
                </div>
            </div>

            <div class="footer-section hours">
                <h3>Opening Hours</h3>
                <div class="hours-grid">
                    {% if contactEntry and contactEntry.openingHours.openingTimes|length %}
                        {% for day in contactEntry.openingHours.openingTimes %}
                            <div class="day-row{% if day.openTime == 'Closed' or day.closedTime == 'Closed' %} closed{% endif %}">
                                <span class="day">{{ day.day }}:</span>
                                <span class="hours">
                                    {% if day.openTime == 'Closed' or day.closedTime == 'Closed' %}
                                        Closed
                                    {% else %}
                                        {{ day.openTime }} - {{ day.closedTime }}
                                    {% endif %}
                                </span>
                            </div>
                        {% endfor %}
                    {% else %}
                        {# Fallback to hardcoded hours if CMS data not available #}
                        <div class="day-row closed">
                            <span class="day">Monday:</span>
                            <span class="hours">Closed</span>
                        </div>
                        <div class="day-row">
                            <span class="day">Tuesday:</span>
                            <span class="hours">09:00 - 18:00</span>
                        </div>
                        <div class="day-row">
                            <span class="day">Wednesday:</span>
                            <span class="hours">09:00 - 18:00</span>
                        </div>
                        <div class="day-row">
                            <span class="day">Thursday:</span>
                            <span class="hours">09:00 - 20:00</span>
                        </div>
                        <div class="day-row">
                            <span class="day">Friday:</span>
                            <span class="hours">09:00 - 19:00</span>
                        </div>
                        <div class="day-row">
                            <span class="day">Saturday:</span>
                            <span class="hours">09:00 - 17:00</span>
                        </div>
                        <div class="day-row closed">
                            <span class="day">Sunday:</span>
                            <span class="hours">Closed</span>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="footer-section contact">
                <h3>Contact Us</h3>
                <div class="contact-info">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>
                            {% if contactEntry and contactEntry.location.address %}
                                <a href="https://www.google.com/maps/place/{{ contactEntry.location.address|url_encode }}" target="_blank" rel="noopener noreferrer">
                                    {{ contactEntry.location.address }}
                                </a>
                            {% else %}
                                <a href="https://www.google.com/maps/place/61+Dowson+Rd,+Hyde+SK14+1QS/" target="_blank" rel="noopener noreferrer">
                                    61 Dowson Road, Hyde, Cheshire, SK14 1QS
                                </a>
                            {% endif %}
                        </span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>
                            {% if contactEntry and contactEntry.connect.cb_phone.phoneNumber %}
                                <a href="tel:{{ contactEntry.connect.cb_phone.phoneNumber|replace(' ', '') }}">
                                    {{ contactEntry.connect.cb_phone.phoneNumber }}
                                </a>
                            {% else %}
                                <a href="tel:01613689999">0161 368 9999</a>
                            {% endif %}
                        </span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        {% apply enkode_emails %}
                        {% if contactEntry and contactEntry.connect.cb_emailAddress.emailAddress %}
                            <a href="mailto:{{ contactEntry.connect.cb_emailAddress.emailAddress }}">Click here to email us</a>
                        {% else %}
                            <a href="mailto:enquiries@leadingedgehairandbeauty.co.uk">Click here to email us</a>
                        {% endif %}
                        {% endapply %}
                    </div>
                </div>

                <div class="social-icons">
                    {% if contactEntry and contactEntry.connect.socialLinks|length %}
                        {% for link in contactEntry.connect.socialLinks %}
                            <a href="{{ link.link }}" aria-label="{{ link.platform }}" target="_blank">
                                <i class="fab {{ link.icon }}"></i>
                            </a>
                        {% endfor %}
                    {% else %}
                        {# Fallback social links #}
                        <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="#" aria-label="X"><i class="fab fa-twitter"></i></a>
                        <a href="#" aria-label="Pinterest"><i class="fab fa-pinterest-p"></i></a>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="footer-bottom">
            <p>&copy; {{ "now"|date("Y") }} Hair Haven. All rights reserved.</p>
        </div>
    </div>
</footer>
